<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioSegmentV2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <item name="TextColor">@color/white</item>
        <item name="TextColorDisabled">@color/grey</item>
        <item name="TextColorInversed">@color/black</item>

        <item name="WeekdayText">@color/grey</item>
        <item name="WeekendSatText">@color/lite_blue</item>
        <item name="WeekendSunText">@color/lite_red</item>

        <item name="ForegroundOverlay">@color/dark_overlay</item>

        <item name="BGColorTransparent">@color/transparent</item>
    </style>
</resources>